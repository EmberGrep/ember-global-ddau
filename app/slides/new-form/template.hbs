<div class="slide__cover slide__cover--column">
  <h2 class="slide__title">Basic New Model Form</h2>
  <div class="card-container">
    <div class="card">
{{! BEGIN-SNIPPET new-form-template }}
<h2>Model Name: {{model.name}}</h2>
<form onsubmit={{action "saveNewSlide"}}>
  <div class="form-field">
    <label class="form-field__label">Slide Name</label>
    {{input class="form-field__input" placeholder="Slide Name" value=model.name}}
  </div>

  <button class="form-btn form-btn--submit">Save</button>
</form>
{{! END-SNIPPET }}
    </div>

    <div class="card">
      <h4 class="code-example-title">new-form/route.js</h4>
      {{code-snippet name="new-form-route.js"}}

      <h4 class="code-example-title">new-form/controller.js</h4>
      {{code-snippet name="new-form-controller.js"}}

      <h4 class="code-example-title">new-form/template.hbs</h4>
      {{code-snippet name="new-form-template.hbs"}}
    </div>
  </div>
</div>
