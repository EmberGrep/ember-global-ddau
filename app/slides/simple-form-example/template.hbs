<div class="slide__cover slide__cover--column">
  <h2 class="slide__title">Ember Simple Form</h2>
  <div class="card-container">
    <div class="card">
{{! BEGIN-SNIPPET simple-form-template }}
<h2>Model Name: {{model.name}}</h2>
{{#simple-form onsubmit=(action "saveNewSlide") startingValues=model as |form|}}
  <div class="form-field">
    <label class="form-field__label">Slide Name</label>
    {{input class="form-field__input" placeholder="Slide Name" value=form.name}}
  </div>

  <button class="form-btn form-btn--submit">Save</button>
{{/simple-form}}
{{! END-SNIPPET }}
    </div>

    <div class="card">
      <h4 class="code-example-title">simple-form/route.js</h4>
      {{code-snippet name="simple-form-route.js"}}

      <h4 class="code-example-title">simple-form/controller.js</h4>
      {{code-snippet name="simple-form-controller.js"}}

      <h4 class="code-example-title">simple-form/template.hbs</h4>
      {{code-snippet name="simple-form-template.hbs"}}
    </div>
  </div>
</div>
